{
  "name": "node-chat-socket-mvc",
  "author": "github.com/joaov1ct0r",
  "version": "1.0.0",
  "description": "Sistema feito em arquitetura MVC de registro e login de usuarios com chat para conversas entre usuarios registrados, feito em NodeJS com TypeScript utilizando Express e armazenando dados no banco de dados MySQL utilizando o ORM Sequelize.",
  "main": "./build/index.js",
  "type": "module",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "npm pkg set type='commonjs'; node ./build/index.js",
    "dev": "npm pkg set type='module'; ts-node-dev --transpile-only ./src/index.ts",
    "test": "NODE_ENV='test'; npm pkg set type='module'; jest",
    "test:coverage": "NODE_ENV='test'; jest --coverage",
    "test:watch": "NODE_ENV='test'; jest --watch",
    "test:verbose": "NODE_ENV='test'; jest --verbose"
  },
  "keywords": [
    "chat",
    "nodejs",
    "express",
    "mysql",
    "sequelize"
  ],
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^13.0.0",
    "express": "^4.17.2",
    "ioredis": "^5.2.2",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.4.1",
    "swagger-ui-express": "^4.4.0",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hapi__joi": "^17.1.8",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.1.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.8",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.2.2",
    "jest-mock-extended": "^3.0.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4",
    "uuid": "^9.0.0"
  }
}
