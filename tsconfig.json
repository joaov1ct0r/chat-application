{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": [
      "es6"
    ],
    "baseUrl": "./",
    "paths": {
      "@Socket": ["ws/socket.ts"],
      "@Redis": ["ws/redis.ts"],
      "@App": ["api/src/app.ts"],
      "@Database/*": ["api/src/database/*"],
      "@Errors/*": ["api/src/errors/*"],
      "@Controllers/*": ["api/src/controllers/*"],
      "@Routers/*": ["api/src/routes/*"],
      "@Validators/*": ["api/src/validators/*"],
      "@Services/*": ["api/src/services/*"],
      "@Interfaces/*": ["api/src/interfaces/*"],
      "@Factories/*": ["api/src/factories/*"],
      "@Utils/*": ["api/src/utils/*"],
      "@Logger": ["api/src/logger.ts"],
      "@Middlewares/*": ["api/src/middlewares/*"]
    },
    "allowJs": true,
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["api/src/types"]
  },
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "**/**/**/*.ts",
  ]
}
